{
  "manifest_version": 3,
  "name": "Lancer - Meteora Portfolio Enhancer",
  "version": "1.0.0",
  "description": "Enhanced UI elements and tools for Meteora v2 portfolio page with Solana RPC integration",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://v2.meteora.ag/*",
    "https://*.helius-rpc.com/*",
    "https://*.quicknode.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lancer - Meteora Enhancer"
  },
  "content_scripts": [
    {
      "matches": ["https://v2.meteora.ag/portfolio*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://v2.meteora.ag/*"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
